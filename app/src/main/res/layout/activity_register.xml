<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceOrderDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/engine"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We have no records on you"
                android:layout_marginTop="10dp"
                android:textColor="@color/gen_black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register here"
                android:textSize="15sp"
                android:id="@+id/service_description"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/user_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@android:drawable/editbox_background"/>

<!--            individual type user details starts here-->
            <LinearLayout
                android:id="@+id/individual_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:hint="First Name"
                        android:paddingLeft="10dp"
                        android:id="@+id/firstname"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:inputType="textPersonName"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@android:drawable/editbox_background"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:hint="Last Name"
                        android:id="@+id/lastname"
                        android:paddingLeft="10dp"
                        android:inputType="textPersonName"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_margin="5dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:background="@android:drawable/editbox_background"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More Details Needed"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_dark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Profile image"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:id="@+id/profile_image"
                    android:layout_marginTop="15dp"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/upload_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/profile_image"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/select_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center|right"
                        android:src="@drawable/photograph"/>
                </FrameLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:id="@+id/address"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:hint="Address"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:hint="Phone Number"
                    android:id="@+id/phone_number"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:inputType="phone"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:hint="Email"
                    android:id="@+id/email"
                    android:paddingLeft="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:inputType="textEmailAddress"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Valid National ID"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:id="@+id/national_ID"
                    android:layout_marginTop="15dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/select_nationalID"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Browse"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/national_ID_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:hint="Password"
                    android:paddingLeft="10dp"
                    android:id="@+id/password"
                    android:textColor="@android:color/holo_red_dark"
                    android:inputType="textPassword"/>
            </LinearLayout>

<!--            company layout starts here-->
            <LinearLayout
                android:id="@+id/company_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/company_name"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Company name"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/company_address"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Address"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/company_town"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Town"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/company_email"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Email"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:id="@+id/company_phone"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Phone number"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload business registration certificate"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:id="@+id/business_certificate"
                    android:layout_marginTop="15dp"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/select_company_cerificate"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Browse"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/certificate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center_vertical"
                    android:textStyle="italic"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/company_password"
                    android:textColor="@android:color/holo_red_dark"
                    android:background="@android:drawable/editbox_background"
                    android:layout_marginTop="10dp"
                    android:hint="Password"/>

            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="10dp"/>

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="Register --> Login"
            android:textColor="@android:color/white"
            android:id="@+id/sign_up_button"
            android:textSize="15sp"
            android:background="@color/colorPrimary"
            />



    </LinearLayout>

</ScrollView>



